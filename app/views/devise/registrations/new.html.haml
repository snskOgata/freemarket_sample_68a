.account-page
  = render "shared/user-header"
  .account-page__contents
    .account-page__contents__title
      会員情報入力
    .account-page__contents__register
      = form_for(@user, url: user_registration_path) do |f|
        .field
          .field-label
            = f.label :ニックネーム
            %span.form-require 必須
          .field-input
            = f.text_field :nickname, autofocus: true, placeholder: '(例)フリマ太郎'
          - show_errors(@user, :nickname).each do |error|
            = error
        .field
          .field-label
            = f.label :メールアドレス
            %span.form-require 必須
          .field-input
            = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
          - show_errors(@user, :email).each do |error|
            = error
        .field
          .field-label
            = f.label :パスワード
            %span.form-require 必須
          .field-input
            = f.password_field :password, autocomplete: "off", placeholder: '7文字以上の半角英数字'
            %i ※ 英字と数字の両方を含めて設定してください
          - show_errors(@user, :password).each do |error|
            = error
        .field
          .field-label
            = f.label :パスワード再入力
            %span.form-require 必須
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: '7文字以上の半角英数字'
          - show_errors(@user, :password_confirmation).each do |error|
            = error
        .actions
          = f.submit "次へ", class: 'btn'
= render "shared/user-footer"