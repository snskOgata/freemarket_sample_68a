.account-page
  = render "shared/user-header"
  .account-page__contents
    .account-page__contents__title
      .login-acount
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_registration_path(resource_name), class: 'registration-btn'
      %hr{style: "width: 90%; margin: 0 auto"}/
      .login-inner
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = devise_error_messages!
          .field-label
            = f.label :email, "メールアドレス"
          .field-input
            = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
            - if @sns_id.present?
              = hidden_field_tag :sns_auth, true
          .field-label
            = f.label :password, "パスワード"
          .field-input
            = f.password_field :password, autocomplete: "off", placeholder: '7文字以上の半角英数字'
          .actions
            = f.submit "ログイン", class: 'btn' 

  = render "shared/user-footer"

  