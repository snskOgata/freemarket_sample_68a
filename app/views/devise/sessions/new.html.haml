.account-page
  = render "shared/user-header"
  .account-page__contents
    .account-page__contents__title
      %p アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", new_registration_path(resource_name), class: 'registration-btn'
      = link_to 'Facebookで登録', user_facebook_omniauth_authorize_path, method: :post, class: 'facebook-btn'
      = link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path, method: :post, class: 'google-btn'
    .account-page__contents__register
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        = devise_error_messages!
        
        .field
          .field-label
            = f.label :メールアドレス
            
          .field-input
            = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
        .field
          .field-label
            = f.label :パスワード
          .field-input
            = f.password_field :password, autocomplete: "off", placeholder: '7文字以上の半角英数字'
        .actions
          = f.submit "ログイン", class: 'btn' 
  = render "shared/user-footer"